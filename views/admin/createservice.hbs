<div class="container">
    <div class=".col-xs-4 .col-md-offset-2">
        <div class="panel panel-default panel-info Profile">
            <h3 class="mt-4"> Create A Service </h3>

            <div class="panel-body">
                {{> messages}}
                <div class="form-horizontal">
                    <form method="POST" action="/admin/services">
                        <div class="form-group mb-3">
                            <span><i class="fas fa-file-signature"></i></span>

                            <label class="col-sm-2 control-label">Service Name</label>
                            <div class="col-sm-4">
                                <input required class="form-control" type="text" name="name" placeholder="">
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="col-sm-2 control-label">Category Name</label>
                            <div class="col-sm-4">
                                
                            <select class="form-select" required name="id" required aria-label="Default select example">
                                <option selected></option>
                                 {{#each categorys}}

                            <option value="{{this.dataValues.id}}">{{this.dataValues.name}}</option>
                            {{/each}}

                              
                            </select>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <span><i class="fas fa-list"></i></span>


                            <label for="exampleFormControlTextarea1" class="form-label">Service Description</label>
                            <div class="col-sm-4">

                                <textarea required class="form-control" name="description" id="exampleFormControlTextarea1"
                                    rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <span><i class="fas fa-money-bill"></i></span>

                            <label class="col-sm-2 control-label">Service fee</label>
                            <div class="col-sm-4">
                                <input required class="form-control" type="number" name="fee">
                            </div>
                        </div>


                        <div class="form-group mb-3">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button class="btn btn-success">
                                    <span><i class="fas fa-plus"></i></span>
                                    Create</button>
                            </div>
                        </div>
                    </form>
                </div> <!-- end form-horizontal -->
            </div> <!-- end panel-body -->

        </div> <!-- end panel -->


    </div> <!-- end size -->
</div> <!-- end container-fluid -->
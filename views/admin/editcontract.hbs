<div class="container">
    <div class=".col-xs-4 .col-md-offset-2">
        <div class="panel panel-default panel-info Profile">
            <div class=""> Update A Contract </div>

            <div class="panel-body">
                {{> messages}}
                <div class="form-horizontal">
                    {{#each contract }}
                        
                    <form method="POST" action="/admin/contract/edit/{{this.dataValues.id}}">
                    {{/each}}
                        <div class="col-sm-4">
                    <label for="exampleFormControlTextarea1" class="form-label">Company</label>

                            <select class="form-select mb-3" name="user" disabled aria-label="Default select example">
                                 {{#each contract}}
                                <option selected>{{this.dataValues.user.dataValues.name}}</option>
                                {{/each}}
                                

                            </select>
                        </div>
                        <div class="col-sm-4">
                                                        <label for="exampleFormControlTextarea1" class="form-label"> Service</label>

                            <select class="form-select mb-3" disabled name="service" aria-label="Default select example">
                                {{#each contract}}
                                <option selected>{{this.dataValues.service.dataValues.name}}</option>
                                {{/each}}
                               
                              

                            </select>
                        </div>


                        
                        <div class="form-group mb-3">
                            <label class="col-sm-2 control-label">Agreed fee</label>
                            <div class="col-sm-4">
                                {{#each contract }}
                                    
                                <input class="form-control" value="{{this.dataValues.agreed_rate}}" type="text" name="agreed_rate">
                                {{/each}}
                            </div>
                        </div>
                        <label class="col-sm-2 control-label">Contract Status</label>

                        <div class="col-sm-4">
                            <select class="form-select mb-3" name="status" aria-label="Default select example">
                                {{#each contract}}
                                <option selected>{{this.dataValues.status}}</option>
                                {{/each}}
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>

                            </select>
                        </div>
                        

                        <div class="form-group mb-3">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button class="btn btn-success">Update</button>
                            </div>
                    </form>
                        </div>
                </div> <!-- end form-horizontal -->
            </div> <!-- end panel-body -->

        </div> <!-- end panel -->


    </div> <!-- end size -->
</div> <!-- end container-fluid -->